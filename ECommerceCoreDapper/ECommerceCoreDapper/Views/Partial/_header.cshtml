<script>
	$('#search').keyup(function(){
        var id = $('#search').val();
        var iproduct = 0;
        if (id != "") {
            $.ajax({
				type:"POST",
				url:"/Home/GetSearch",
                data: {id:id},
				ContentType:"application/json;charset=UTF-8",
				dataType:"json",
                success: function(result) {            
                    $('#srcUl').remove()
                    $('#dv').append("<ul id='srcUl'>");
                    $.each(result,function(key,value) { 
						if(value.Product!=0){							
                            if (iproduct == 0) {
                                $('#srcUl').append("<li><hr></li>")
								 iproduct++;
							}
							$('#srcUl').append("<li><a href='@Url.Action("Details","Home")?id="+value.Product+"' style='color:black;font-weight:bold;background-color:white'>"+value.SearchName+"</a></li>")
							
                           
						}
					})
				}
			})
		}
		else{
            $('#srcUl').remove();
		}
	})
</script>