@using ECommerceCoreDapper.Models
@using ECommerceCoreDapper.Models.Repository

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/default_layout.cshtml";
}

<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="@Url.Action("Index","Home")" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>
			<span class="stext-109 cl4">
				Shoping Cart
			</span>
		</div>
	</div>
<br />
<br />
<!-- Shoping Cart -->
@using (Html.BeginForm()){
	@*<form class="bg0 p-t-75 p-b-85">*@
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Product</th>
									<th class="column-2"></th>
									<th class="column-3">Price</th>
									<th class="column-4">Quantity</th>
									<th class="column-5">Total</th>
								</tr>						
								@foreach (var item in ViewBag.cart as List<ProductsOrders>)
								{
									<tr class="table_row">
									<td class="column-1">
										<input type="hidden" value="@item.ProductID" id="pID" class="PrID">
										<div class="how-itemcart1">
										<img src="images/@item.PhotoPath" alt="IMG">
										</div>
									</td>
									<td class="column-2"><a href="@Url.Action("Details","Home",new{id=item.ProductID})">@item.ProductName</a></td>
									<td class="column-3">$ @item.UnitPrice</td>
									<td class="column-4">
										<div class="wrap-num-product flex-w m-l-auto m-r-0">
											<div class="btn-num-product-down cl8 trans-04 flex-c-m" disabled="true">
												<i class="fs-16 zmdi zmdi-minus" disabled="true"></i>												
											</div>

											<input class="mtext-104 cl3 txt-center num-product" id="qty" type="number" max="5" min="1" name="num-product1" value="@item.Quantity" readonly>

											<div class="btn-num-product-up cl8 trans-04 flex-c-m" disabled="true">
												<i class="fs-16 zmdi zmdi-plus" disabled="true"></i>
											</div>
										</div>
									</td>
									@{
										decimal total = @item.UnitPrice *@item.Quantity;
									}
									
									<td class="column-5">$@total </td>
								</tr>
									
							}

								

								
							</table>
						</div>

						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
							<div class="flex-w flex-m m-r-20 m-tb-5">
								<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">
									
								<div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
									Apply coupon
								</div>
							</div>

							<div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
							<a href="@Url.Action("Shop","Home")">Update Cart</a>
							</div>
						</div>
					</div>
				</div>
			@{
				int i = 0;
				int totalQuantity = 0;
				decimal totalPrice = 0;
				decimal alltotal = 0;
				foreach (var item in ViewBag.cart as List<ProductsOrders>)
				{
					totalQuantity+=item.Quantity;
					totalPrice += item.UnitPrice;
					alltotal += item.UnitPrice * item.Quantity;
					i++;
				}
				ViewBag.pen=i;
				ViewBag.totalQuantity = totalQuantity;
				ViewBag.totalPrice = totalPrice;
				ViewBag.alltotal = alltotal;

			}
			
				<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
					<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
						<h4 class="mtext-109 cl2 p-b-30">
							Cart Totals
						</h4>

						<div class="flex-w flex-t bor12 p-b-13">
							<div class="size-208">
								<span class="stext-110 cl2">
									Subtotal:
								</span>
							</div>

							<div class="size-209">
								<span class="mtext-110 cl2">
									$@ViewBag.alltotal
								</span>
							</div>
						</div>

						<div class="flex-w flex-t bor12 p-t-15 p-b-30">
							<div class="size-208 w-full-ssm">
								<span class="stext-110 cl2">
									Shipping:
								</span>
							</div>

							<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
								<p class="stext-111 cl6 p-t-2">
									For a short time, we do not charge shipping fees on all purchases.
								</p>								
															
							</div>
						</div>
						<div class="flex-w flex-t p-t-27 p-b-33">
							<div class="size-208">
								<span class="mtext-101 cl2">
									Shipping Tax:
								</span>
								</div>

								<div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									$0
								</span>
							</div>
						</div>
						<div class="flex-w flex-t p-t-27 p-b-33">
							<div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
							</div>

							<div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									$@ViewBag.alltotal
								</span>
							</div>
						</div>

						<button asp-action="Checkout" asp-controller="User" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" id="goOrd">
							Proceed to Checkout
						</button>
					</div>
				</div>
			</div>
		</div>
	@*</form>*@
	}
